# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=xw123456
DB_NAME=cutool_db
DB_CHARSET=utf8mb4

# 服务器配置
PORT=3003

# 阿里云配置
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_ENDPOINT=cloudauth.aliyuncs.com

# 支付宝配置
# 获取方式：参考 ALIPAY_CONFIG_GUIDE.md 文档
# 1. 注册支付宝开放平台账号：https://open.alipay.com/
# 2. 创建应用并获取 APPID
# 3. 生成密钥对（RSA2）
# 4. 上传应用公钥，获取支付宝公钥
ALIPAY_APP_ID=your_app_id

# 私钥格式说明：
# 需要包含完整的 BEGIN 和 END 标记，保留换行符
# 可以使用 \n 表示换行，或者使用实际换行
# 示例格式：
# ALIPAY_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEA...\n-----END RSA PRIVATE KEY-----"
ALIPAY_APP_PRIVATE_KEY=your_app_private_key

# 支付宝公钥格式说明：
# 需要包含完整的 BEGIN 和 END 标记
# 可以使用 \n 表示换行，或者使用实际换行
# 示例格式：
# ALIPAY_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nMIIBIjANBgkqhkiG...\n-----END PUBLIC KEY-----"
ALIPAY_PUBLIC_KEY=alipay_public_key
ALIPAY_SIGN_TYPE=RSA2
# 沙箱环境设为 True，生产环境设为 False
ALIPAY_DEBUG=False
# 支付完成后跳转的页面
ALIPAY_RETURN_URL=http://localhost:3000/vehicle-verify
# 支付宝异步通知地址（必须是公网可访问的 HTTPS 地址）
ALIPAY_NOTIFY_URL=http://your-domain.com/api/vehicle-verify/alipay/notify

# JWT密钥（用于生成和验证登录token）
# 重要：必须配置此密钥，否则每次重启服务器都会生成新的密钥，导致之前的token失效
# 可以使用以下命令生成：python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here
# 或者使用 JWT_SECRET_KEY（优先级更高）
# JWT_SECRET_KEY=your_jwt_secret_key_here

# GitHub OAuth配置
# 获取方式：https://github.com/settings/developers
# 1. 创建 OAuth App
# 2. 设置 Authorization callback URL（必须与后端回调地址完全一致）:
#    - 生产环境: https://api.cutool.online/api/auth/callback/github
#    - 或: https://cutool.online/api/auth/callback/github
#    - 开发环境: http://localhost:3003/api/auth/callback/github
# 3. 重要：回调 URL 必须包含完整的协议、域名和路径
# 4. 生产环境建议使用 HTTPS（代码会自动将 HTTP 转换为 HTTPS，除非是 localhost）
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# GitHub回调地址（强烈建议配置，生产环境必须使用 HTTPS）
# 如果设置了此变量，将使用此地址作为GitHub OAuth回调地址
# 生产环境示例: GITHUB_CALLBACK_URI=https://api.cutool.online/api/auth/callback/github
# 开发环境示例: GITHUB_CALLBACK_URI=http://localhost:3003/api/auth/callback/github
# 注意：如果不配置，代码会自动生成，生产环境会自动使用 HTTPS
GITHUB_CALLBACK_URI=

# Google OAuth配置
# 获取方式：https://console.cloud.google.com/apis/credentials
# 1. 创建 OAuth 2.0 客户端 ID
# 2. 设置授权重定向 URI（生产环境建议使用 HTTPS）:
#    - 生产环境: https://api.cutool.online/api/auth/callback/google
#    - 开发环境: http://localhost:3003/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Google回调地址（强烈建议配置，生产环境必须使用 HTTPS）
# 如果设置了此变量，将使用此地址作为Google OAuth回调地址
# 生产环境示例: GOOGLE_CALLBACK_URI=https://api.cutool.online/api/auth/callback/google
# 开发环境示例: GOOGLE_CALLBACK_URI=http://localhost:3003/api/auth/callback/google
# 注意：如果不配置，代码会自动生成，生产环境会自动使用 HTTPS
GOOGLE_CALLBACK_URI=

# 微信OAuth配置（需要企业认证）
# 获取方式：https://open.weixin.qq.com/
# 1. 注册并认证企业账号
# 2. 创建网站应用
# 3. 设置授权回调域（只需要域名，如：cutool.online 或 api.cutool.online）
# 4. 重要：生产环境必须使用 HTTPS，开发环境可以使用 HTTP
WECHAT_CLIENT_ID=your_wechat_app_id
WECHAT_CLIENT_SECRET=your_wechat_app_secret
# 微信回调地址（强烈建议配置，生产环境必须使用 HTTPS）
# 如果设置了此变量，将使用此地址作为微信OAuth回调地址
# 生产环境示例: WECHAT_CALLBACK_URI=https://api.cutool.online/api/auth/callback/wechat
# 开发环境示例: WECHAT_CALLBACK_URI=http://localhost:3003/api/auth/callback/wechat
# 注意：如果不配置，代码会自动生成，但生产环境会自动使用 HTTPS
WECHAT_CALLBACK_URI=

# 代理配置（用于访问 Google、GitHub 等国外服务）
# 如果服务器在中国大陆，访问 Google/GitHub 可能需要配置代理
# 示例: HTTP_PROXY=http://proxy.example.com:8080
# 示例: HTTPS_PROXY=http://proxy.example.com:8080
# 注意：如果只配置了 HTTP_PROXY，HTTPS 请求也会使用该代理
HTTP_PROXY=
HTTPS_PROXY=
